<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.0"
            android:focusable="true"
            android:id="@+id/loginLLId"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22.0dip" >

                <ImageView
                    android:layout_width="86.0dip"
                    android:layout_height="86.0dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/userhead"
                    android:visibility="visible" />
            </FrameLayout>

            <EditText
                android:id="@+id/loginEditTextId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/login_icon_account"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入账户"
                android:inputType="text"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="admin" />

            <EditText
                android:id="@+id/pswEditTextId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="qin199224" />

            <Button
                android:id="@+id/bnLogin"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="80dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginBottom="120dp"
                android:layout_marginRight="40.0dip"
                android:background="@drawable/loginbtnbck"
                android:text="登录"
                android:textColor="#ffffffff"
                android:textSize="18.0sp"/>
            <TextView
                android:id="@+id/regetpsdTvid"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="忘记密码?"
                android:textColor="#4A90E2"
                android:gravity="center|bottom"
                android:layout_gravity="bottom"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>