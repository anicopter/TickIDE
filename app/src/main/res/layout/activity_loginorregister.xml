<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/gotoLoginId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gotoregeistId"
        android:layout_alignLeft="@+id/gotoregeistId"
        android:layout_alignStart="@+id/gotoregeistId"
        android:layout_marginBottom="40dp"
        android:background="@drawable/loginbtnbck"
        android:text="登录"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/gotoregeistId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/loginbtnbck"
        android:text="注册"
        android:textColor="@android:color/white" />
</RelativeLayout>
