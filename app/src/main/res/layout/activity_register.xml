<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.0"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22.0dip" >

                <ImageView
                    android:layout_width="86.0dip"
                    android:layout_height="86.0dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/userhead"
                    android:visibility="visible" />
            </FrameLayout>

            <EditText
                android:id="@+id/register_usernameId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/login_icon_account"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入账户"
                android:inputType="text"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="admin" />

            <EditText
                android:id="@+id/register_pswId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="qin199224" />
            <EditText
                android:id="@+id/register_psw_sureId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="qin199224" />
            <EditText
                android:id="@+id/register_emallId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/register_icon_email"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入邮箱"
                android:inputType="textWebEmailAddress"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="12345@qq.com" />
            <EditText
                android:id="@+id/register_telId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginBottom="20.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:background="@mipmap/useredittextbck"
                android:drawableLeft="@mipmap/register_icon_tel"
                android:drawablePadding="15.0dip"
                android:ems="10"
                android:hint="请输入电话号码"
                android:inputType="phone"
                android:paddingBottom="2.0dip"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:paddingTop="2.0dip"
                android:singleLine="true"
                android:textColorHint="#ff999999"
                android:textSize="16.0sp"
                android:text="15745676543" />

            <Button
                android:id="@+id/registerBtnId"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:background="@drawable/loginbtnbck"
                android:singleLine="true"
                android:text="注册"
                android:textColor="#ffffffff"
                android:textSize="18.0sp"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>